<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LetsEat.Views.Customer_Side.RestaurantList">
            
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="tempimage" Source="https://stepupandlive.files.wordpress.com/2015/03/sydney.jpg"></Image>
            <Label Text="List of restaurant goes here!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <ListView x:Name="MainListView" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                
                                <Label Text="{Binding Name}" 
                                    HorizontalOptions="CenterAndExpand"/>
                                <Label Text="{Binding Cuisine}"
                                       HorizontalOptions="CenterAndExpand"
                                       TextColor="Silver"
                                       Font="Small"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>



