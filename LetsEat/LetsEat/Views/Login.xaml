<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LetsEat.Views.Login">
    <StackLayout>
        <Label x:Name="UsrName_Label" Text="Username" />
        <Entry x:Name="UsrName_Entry" Placeholder="Username" />
        <Label x:Name="Pwd_Label" Text="Password" />
        <Entry x:Name="Pwd_Entry" Placeholder="Minimum of 8 characters." IsPassword="True" />
        <Button x:Name="SignInButton" Text="Sign In" Clicked="SignInProcedure" /> <!-- Calls SignInProcedure function in Login.cs -->
        <Button x:Name="Register" Text="Register" Clicked="RegisterProcedure"/> <!-- Calls Registration function to allow users to register -->
    </StackLayout>
</ContentPage>